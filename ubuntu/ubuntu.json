{
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/vpp/repo.sh"
      ]
    }
  ],
  "builders": [
    {
      "type": "qemu",
      "qemuargs": [
        [
          "-m",
          "8192M"
        ],
        [
          "-cpu",
          "host"
        ],
        [
          "-boot",
          "strict=on"
        ],
        [
          "-smp",
          "cpus=1,maxcpus=16,cores=4"
        ]
      ],
      "disk_interface": "virtio-scsi",
      "machine_type": "q35",
      "disk_compression": true,
      "disk_size": 8192,
      "accelerator": "kvm",
      "format": "qcow2",
      "net_device": "virtio-net",
      "iso_url": "/opt/iso/ubuntu-22.04.1-live-server-amd64.iso",
      "iso_checksum": "md5:e8d2a77c51b599c10651608a5d8c286f",
      "vm_name": "ubuntu",
      "output_directory": "./_output",
      "headless": true,
      "vnc_bind_address": "10.119.1.17",
      "vnc_use_password": true,
      "http_directory": "./http",
      "ssh_username": "ubuntu",
      "ssh_password": "Ubuntu",
      "ssh_timeout": "40m",
      "qemu_binary": "/usr/bin/qemu-system-x86_64",
      "boot_wait": "5s",
      "boot_command": [
        "e<down><down><down><end>",
        " autoinstall ip=dhcp ds=\"nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/\"",
        "<F10>"
      ],
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now"
    }
  ]
}
